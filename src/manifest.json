{
    "manifest_version": 2,
    "name": "AtlanticBT Gmail and Salesforce Extension",
    "version": "0.0.1",

    "description": "Extension for AtlanticBT. This extension implements missing features needed by ABT from the 'Lightning for Gmail' plugin from Salesforce.",

    "icons": {
        "16": "favicon_black16.png",
        "24": "favicon_black24.png",
        "32": "favicon_black32.png",
        "48": "favicon_black48.png",
        "128": "favicon_black128.png"
    },
    
    "page_action": {
        "default_icon": { // optional
            "16": "favicon_black16.png", // optional
            "24": "favicon_black24.png", // optional
            "32": "favicon_black32.png" // optional
        }
    },

    "author": "Edwin Beltran",
    "offline_enabled": false,
    "permissions": [
        "https://mail.google.com/",
        "https://inbox.google.com/"
    ],
    "content_scripts": [{
        "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"],
        "js": ["main.js"],
        "css": ["main.css"]
    }]
}